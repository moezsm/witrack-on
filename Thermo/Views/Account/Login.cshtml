@model Thermo.Models.LoginModel

@{
    Layout = "~/Views/Shared/_layoutlogin.cshtml";
}


<img style="position: absolute; bottom: 0px; padding: 0px; right: 0px; margin: 0px; z-index: -10;" src="~/Images/technique.png">
<div id="login-freebie">

    <form id="form" method="post" action="~/fr/Account/Login" novalidate="novalidate">
        @Html.AntiForgeryToken()





        <div class="login-freebie">
            <div class="form">

                <div class="control-group">
                    <div class="controls input-icon">

                        <i class="icon-user"></i>
                        <input id="UserName" class="form-control" type="text" value="" placeholder="Username" name="UserName" data-val-required="Le champ User name est requis." data-val="true" />
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls input-icon">

                        <i class="icon-key"></i>
                        <input id="Password" class="form-control" type="password" placeholder="Password" name="Password" data-val-required="Le champ Password est requis." data-val="true" />
                    </div>
                </div>
            </div>
            <div class="footerLogin">
                <div class="content-footer">
                    <button class="btn btn-danger btn-login" type="submit">@Resources.Login </button>

                </div>
            </div>

        </div>


    </form>
</div>

<script type="text/javascript"><!--
    $('#form input').keydown(function (e) {
        if (e.keyCode == 13) {
            $('#form').submit();
        }
    });
    //--></script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
