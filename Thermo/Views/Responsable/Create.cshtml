@{
    ViewBag.Title = "adduser";

    Layout = "~/Views/Shared/_LayoutMultiselect2.cshtml";
}

@model Thermo.Form.UserinfoView


@if (ViewBag.YouSelected != null)
{

    <div class="alert alert-info">
        <button class="close" data-dismiss="alert" type="button">×</button>
        <i class="icon-info-sign"></i>
        <strong>Sccès!</strong>
        Vos modifications ont été enregistrées.
    </div>

}

@using (Html.BeginForm())
{

    <legend>@Ressources.Resources.SelectUsers</legend>
    <fieldset>


        <div class="editor-field">

            @Html.ListBox("listuser", ViewBag.Userlist as MultiSelectList,

    new { @class = "chzn-select", style = "width:350px;" })

        </div>

        <p>

            <input class="btn btn-primary"  type="submit" value=" @Ressources.Resources.Save" />

        </p>

    </fieldset>

    
}
<script src="@Url.Content("~/Scripts/jquery-1.7.1.js")"></script>
<script src="@Url.Content("~/chosen/chosen.jquery.js")" type="text/javascript"></script>
