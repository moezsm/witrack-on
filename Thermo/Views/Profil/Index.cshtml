@model IEnumerable<Thermo.Models.Profil>
@using Thermo.Helpers
@{
    ViewBag.Title = "Index";
}
<h2>@Ressources.Resources.userslist</h2>

@if( Roles.IsUserInRole("super_admin"))
{
<p style="clear:both;text-align:right;">
     
    <a  href="~/@CultureHelper.GetCurrentCulture()/Account/Register" class="btn btn-primary">@Resources.Createnew</a>
</p>
}
<div >
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>@Ressources.Resources.Users</h4>
                    <div class="options">
                        <a href="javascript:;" class="panel-collapse"><i class="fa fa-chevron-down"></i></a>
                    </div>
                </div>
                <div class="panel-body collapse in">
                    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered datatables" id="example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nom)
                                </th>
                                <th>
                                    Prénom
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Mail)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Mailweekend)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Mail3)
                                </th>
                                <th>
                                    Numéro
                                </th>
                                <th>
                                  Numéro2
                                </th>
                                <th>
                                   Numéro3
                                </th>
                                
                                <th> Actions</th>
                            </tr>
                            </thead>
                        <tbody>
                                                                @foreach (var item in Model)
                                                                {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nom)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Prenom)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Mail)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Mailweekend)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Mail3)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.numero)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.numero2)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.numero3)
                                            </td>
                                          
                                            <td>
                                                <div class="btn-group">
                                               <a class="btn btn-primary-alt btn-sm" type="button" @Html.ActionLink(Ressources.Resources.Edit, "Edit", new { id = item.ProfilID }) 
                                               <a class="btn btn-primary-alt btn-sm" type="button" @Html.ActionLink(Ressources.Resources.Details, "Details", new { id = item.ProfilID }) 
                                               @if( Roles.IsUserInRole("super_admin"))
{
                                                   <a class="btn btn-primary-alt btn-sm" type="button" @Html.ActionLink(Ressources.Resources.Delete, "Delete", new { id = item.ProfilID })></a>
                                               }
                                                       </div>
                                            </td>
                                        </tr>
                                                                }

                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
