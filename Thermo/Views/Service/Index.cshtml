@model IEnumerable<Thermo.Models.Service>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
   <a href="~/Service/create" class="btn btn-primary ">Create new</a>
</p>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>Services</h4>
                    <div class="options">
                        <a href="javascript:;"><i class="fa fa-cog"></i></a>
                        <a href="javascript:;"><i class="fa fa-wrench"></i></a>
                        <a href="javascript:;" class="panel-collapse"><i class="fa fa-chevron-down"></i></a>
                    </div>
                </div>
                <div class="panel-body collapse in">
                    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered datatables" id="example">
                        <thead>

                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>Action</th>
                            </tr>
                            </thead>
                             <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                            <a class="btn btn-primary-alt btn-sm" type="button" @Html.ActionLink("Edit", "Edit", new { id = item.ServiceID }) 
                                            <a class="btn btn-primary-alt btn-sm" type="button" @Html.ActionLink("Details", "Details", new { id = item.ServiceID }) 
                                            <a class="btn btn-primary-alt btn-sm" type="button" @Html.ActionLink("Delete", "Delete", new { id = item.ServiceID }) 
                                            <a class="btn btn-primary-alt btn-sm" type="button" @Html.ActionLink("Add groupe", "Addgroupe", new { id = item.ServiceID })
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Create New</h4>
            </div>
            <div class="modal-body">
                <iframe src="/Service/create" style="height: 300px; width: 200px;" frameborder="0" scrolling="no"></iframe>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->