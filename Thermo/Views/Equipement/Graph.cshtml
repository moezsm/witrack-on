@{
    ViewBag.Title = "Graph";

    Layout = "~/Views/Shared/_layoutdocument.cshtml";
    
}
<!--@Request.ApplicationPath -->
            <!--http://www.highcharts.com/samples/data/jsonp.php?filename=large-dataset.json&callback=?-->
 <script type="text/javascript">
     $(function () {
         $.getJSON('@Request.ApplicationPath/fr/Equipement/Json/@ViewData["id"]', function (data) {

                // Create a timer
                var start = +new Date();

                // Create the chart
                $('#container').highcharts('StockChart', {
                    exporting: {
                        sourceWidth: 1800,
                        
                        sourceHeight: 1100,
                        filename: 'Rapport @ViewData["Name"]' + '@DateTime.Now' 
                        
                    },
                    chart: {
                        events: {
                            load: function (chart) {
                            }
                        },
                        zoomType: 'x',

                    },

                    rangeSelector: {
                        buttons: [{
                            type: 'day',
                            count: 3,
                            text: '3j'
                        }, {
                            type: 'week',
                            count: 1,
                            text: '1s'
                        }, {
                            type: 'month',
                            count: 1,
                            text: '1m'
                        }, {
                            type: 'month',
                            count: 6,
                            text: '6m'
                        }, {
                            type: 'year',
                            count: 1,
                            text: '1a'
                        }, {
                            type: 'all',
                            text: 'Tous'
                        }],
                        selected: 3
                    },

                    yAxis: {
                        title: {
                            text: 'Temperature (°C)'
                        },
                        plotLines : [{
                            value: @ViewData["Min"],
                            color : 'green',
                            dashStyle : 'shortdash',
                            width : 2,
                            label : {
                                text : 'Alarme Basse'
                            }
                        }, {
                            value: @ViewData["Max"],
                            color : 'red',
                            dashStyle : 'shortdash',
                            width : 2,
                            label : {
                                text : 'Alarme Haute'
                            }
                        }]
                    },

                    title: {
                        text: 'Rapport pour \t @ViewData["Name"]',
                        style: {
                            
                            fontSize: '30px'
                        }
                        
                        
                    },

                    subtitle: {
                        text: 'Utilisateur: @ViewData["user"] ' +  " \n;\n" + 'Sonde: @ViewData["Numero"] ' +  "\n;\n" + 'Max/Min: @ViewData["Max"]°C/@ViewData["Min"]°C', // dummy text to reserve space for dynamic subtitle
                        style: {
                            
                            fontSize: '16px'
                        }
                    },
                    
                    subtitlezone: {
                        text: 'Lieu: @ViewData["Location"] ' +  " \n;\n" + 'Zone: @ViewData["Zone"] ' +  "\n;\n" + 'Date du rapport: @ViewData["Date"]', // dummy text to reserve space for dynamic subtitle
                        style: {
                            
                            fontSize: '16px'
                        }
                    },
                    series: [{
                        name: 'Temperature',
                        data: data,
                        tooltip: {
                            valueDecimals: 1,
                            valueSuffix: '°C'
                        }
                    }]

                });
            });
        });
		</script>

@section graph{}