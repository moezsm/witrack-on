

@{
    ViewBag.Title = "Create";
}




        <div class="panel panel-primary">
    <div class="panel-heading">
        <h4>@Ressources.Resources.createequipment</h4>
        <div class="options">   
            <a href="javascript:;" class="panel-collapse"><i class="fa fa-chevron-down"></i></a>
        </div>
    </div>
    <div class="panel-body collapse in">
    <fieldset>
        
        <div class="form-group">
            <label for="selector1" class="col-sm-2 control-label">@Ressources.Resources.Sensors</label>
            <div class="col-sm-4">@Html.DropDownList("SensorID", String.Empty)
            </div>
            
        </div>
        <br />
       
      <div id="partialPlaceHolder" > </div>
        
    </fieldset>
        </div>
        </div>





<script type="text/javascript" >
    $(function () {
        $("#SensorID").change(function () {
            var sensorid = $("#SensorID").val();
            var link = '@Url.Action("Creategenerale", new {  id = "-1" })';
            link = link.replace("-1", sensorid);
            $.post(link , { type: $(this).val() },
           function (result) {
               //result will have the html that your controller returns after the post
               // you can do something like,
               
               $('#partialPlaceHolder').html(result);
           });
        });
       
    });
    </script>

<div>
   <a class="btn btn-primary" @Html.ActionLink(Ressources.Resources.BacktoList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
