@model IEnumerable<Thermo.Models.Equipement>
@using Thermo.Helpers
@{
    ViewBag.Title = "Index";
}

<h2>@Ressources.Resources.Responsability</h2>


<div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>@Ressources.Resources.Responsables</h4>
                    <div class="options">
                        <a href="javascript:;" class="panel-collapse"><i class="fa fa-chevron-down"></i></a>
                    </div>
                </div>
                <div class="panel-body collapse in">
                    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered datatables" id="crudtable">
                        <thead>


                            <tr>
                                <th>
                                    Equipement ID 
                                </th>
                                <th>
                                   @Ressources.Resources.Equipementname
                                </th>
                                <th>
                                    Zone
                                </th>
                                <th>
                                    @Ressources.Resources.Location
                                </th>
                                

                               <th>
                                   Action
                               </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EquipementID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Zones.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Zones.Location.Name)
                                    </td>
                                    <td>
                                       <a class="btn btn-primary"  data-toggle="modal" href="#Responsability_@Html.DisplayFor(modelItem => item.EquipementID)" >
                                           <i class="fa fa-key">@Resources.Responsability</i>
                                       </a>
                                        <!-- Add Alarme -->
							<div class="modal fade" id="Responsability_@Html.DisplayFor(modelItem => item.EquipementID)" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
								<div class="modal-dialog">
									<div class="modal-content">
										<div class="modal-header">
											<a type="button" class="close" href="~/@CultureHelper.GetCurrentCulture()/Responsable" aria-hidden="true">&times;</a>
											<h4 class="modal-title">@Resources.Responsables</h4>
										</div>
										<div class="modal-body">
										<iframe src="~/@CultureHelper.GetCurrentCulture()/Responsable/Create/@Html.DisplayFor(modelItem => item.EquipementID)" style="height: 300px; width: 500px;" frameborder="0" scrolling="no"></iframe>
										</div>
										<div class="modal-footer">
											<a type="button" class="btn btn-default" href="~/@CultureHelper.GetCurrentCulture()/Responsable">@Resources.Close</a>
											
										</div>
									</div><!-- /.modal-content -->
								</div><!-- /.modal-dialog -->
							</div><!-- /.modal -->
                                           
                                             
                                        
                                    </td>
                                   
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>