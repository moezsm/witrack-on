@model Thermo.Models.Sensor

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="panel panel-primary">
    <div class="panel-heading">
        <h4>Basic Form Elements</h4>
        <div class="options">   
            <a href="javascript:;" class="panel-collapse"><i class="fa fa-chevron-down"></i></a>
        </div>
    </div>
    <div class="panel-body collapse in">
    <fieldset>
        <legend>Sensor</legend>

        @Html.HiddenFor(model => model.SensorID)
         <form class="form-horizontal row-border">
        <div class="form-group">
                <label class="col-sm-1 control-label">Name</label>
                <div class="col-sm-3">
                    <input id="Name" name="Name" value="@Model.name" type="text" class="form-control popovers" placeholder="Popover Input" data-trigger="hover" data-toggle="popover" data-content="Please enter a name for a location. It will be use later for adding equipements" data-original-title="Name">
                </div>
            </div>
        

        <br />

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
            </form>
    </fieldset>
    </div>
        </div>
}

<div>
   <a class="btn btn-primary" @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
