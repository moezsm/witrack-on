@model Thermo.Models.Sensor

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_layoutiframe.cshtml";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="form-group">
            <label for="focusedinput" class="col-sm-3 control-label">@Html.LabelFor(model => model.name)</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" @Html.EditorFor(model => model.name)
            </div>
            <div class="col-sm-3">
                <p class="help-block">@Html.ValidationMessageFor(model => model.name)</p>
            </div>
        </div>
        

        <p>
            <input type="submit" class="btn btn-primary" value="Create" />
        </p>
    </fieldset>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
