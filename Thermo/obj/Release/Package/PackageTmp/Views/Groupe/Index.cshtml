@model IEnumerable<Thermo.Models.Groupe>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary" type="button"  @Html.ActionLink("Create New", "Create")
</p>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>Groupes</h4>
                    <div class="options">
                        <a href="javascript:;"><i class="fa fa-cog"></i></a>
                        <a href="javascript:;"><i class="fa fa-wrench"></i></a>
                        <a href="javascript:;" class="panel-collapse"><i class="fa fa-chevron-down"></i></a>
                    </div>
                </div>
                <div class="panel-body collapse in">
                    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered datatables" id="example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                       <a class="btn btn-primary-alt btn-sm" type="button" @Html.ActionLink("Edit", "Edit", new { id = item.GroupeID }) 
                                       <a class="btn btn-primary-alt btn-sm" type="button" @Html.ActionLink("Details", "Details", new { id = item.GroupeID }) 
                                       <a class="btn btn-primary-alt btn-sm" type="button" @Html.ActionLink("Delete", "Delete", new { id = item.GroupeID }) 
                                       <a class="btn btn-primary-alt btn-sm" type="button" @Html.ActionLink("Add user", "adduser", new { id = item.GroupeID })
                                           </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
