@model Thermo.Models.Alarme

@{
    Layout = "~/Views/Shared/_layoutiframe.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Alarme</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.StartDate)
        </div>
         <div class="col-sm-6">
             <input type="text" class="form-control" @Html.EditorFor(model => model.StartDate)
             @Html.ValidationMessageFor(model => model.StartDate)
         </div>
        

        <div class="editor-label">
            @Html.LabelFor(model => model.EndDate)
        </div>
        
         <div class="col-sm-6">
              <input type="text" class="form-control" @Html.EditorFor(model => model.EndDate)
              @Html.ValidationMessageFor(model =>model.EndDate)
         </div>
        

        <div class="editor-label">
            @Html.LabelFor(model => model.Status)
        </div>
        <div class="col-sm-6">
              <input type="text" class="form-control" @Html.EditorFor(model => model.Status)
              @Html.ValidationMessageFor(model =>model.Status)
         </div>
       

        <div class="editor-label">
            @Html.LabelFor(model => model.Values)
        </div>
        <div class="col-sm-6">
              <input type="text" class="form-control" @Html.EditorFor(model => model.Values)
              @Html.ValidationMessageFor(model =>model.Values)
         </div>
       <hr>

        <p>
            <input type="submit" class="btn btn-primary" value="Create" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
