@model Thermo.Models.Location

@{
    ViewBag.Title = "Edit";
}

<h2>@Ressources.Resources.editlocation</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="panel panel-primary">
    <div class="panel-heading">
        <h4>@Ressources.Resources.baseelement</h4>
        <div class="options">   
            <a href="javascript:;" class="panel-collapse"><i class="fa fa-chevron-down"></i></a>
        </div>
    </div>
    <div class="panel-body collapse in">
    <fieldset>
      

        @Html.HiddenFor(model => model.LocationID)
        @Html.HiddenFor(model => model.DateCreation)
        
        @Html.HiddenFor(model => model.UserID)
        <form class="form-horizontal row-border">
        <div class="form-group">
                <label class="col-sm-2 control-label">@Ressources.Resources.locationname</label>
                <div class="col-sm-3">
                    <input id="Name" name="Name" value="@Model.Name" type="text" class="form-control popovers" placeholder="Popover Input" data-trigger="hover" data-toggle="popover" data-content="@Ressources.Resources.enternamelocation">
                </div>
            </div>
        

        <br />

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="@Ressources.Resources.Save" />
        </div>
            </form>
    </fieldset>
        </div>
        </div>
}

<div>
   <a class="btn btn-primary" @Html.ActionLink(Ressources.Resources.BacktoList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
