@{
    ViewBag.Title = "Graph";

    Layout = "~/Views/Shared/_layoutdocument.cshtml";
    
}

            <!--http://www.highcharts.com/samples/data/jsonp.php?filename=large-dataset.json&callback=?-->
 <script type="text/javascript">
     $(function () {
         $.getJSON('/fr/Equipement/Json/@ViewData["id"]', function (data) {

                // Create a timer
                var start = +new Date();

                // Create the chart
                $('#container').highcharts('StockChart', {
                    chart: {
                        events: {
                            load: function (chart) {
                            }
                        },
                        zoomType: 'x'
                    },

                    rangeSelector: {
                        buttons: [{
                            type: 'day',
                            count: 3,
                            text: '3d'
                        }, {
                            type: 'week',
                            count: 1,
                            text: '1w'
                        }, {
                            type: 'month',
                            count: 1,
                            text: '1m'
                        }, {
                            type: 'month',
                            count: 6,
                            text: '6m'
                        }, {
                            type: 'year',
                            count: 1,
                            text: '1y'
                        }, {
                            type: 'all',
                            text: 'All'
                        }],
                        selected: 3
                    },

                    yAxis: {
                        title: {
                            text: 'Temperature (°C)'
                        },
                        plotLines : [{
                            value: @ViewData["Min"],
                            color : 'green',
                            dashStyle : 'shortdash',
                            width : 2,
                            label : {
                                text : 'Low Alarme'
                            }
                        }, {
                            value: @ViewData["Max"],
                            color : 'red',
                            dashStyle : 'shortdash',
                            width : 2,
                            label : {
                                text : 'Hight Alarme'
                            }
                        }]
                    },

                    title: {
                        text: 'Rapport pour \t @ViewData["Name"]',
                        
                    },

                    subtitle: {
                        text: 'Utilisateur: @ViewData["user"]' +  "\n" + 'Sonde: @ViewData["Numero"]' +  "\n" + 'Max/Min: @ViewData["Max"]°C/@ViewData["Min"]°C', // dummy text to reserve space for dynamic subtitle
                        
                    },
                    
                    subtitlezone: {
                        text: 'Location: @ViewData["Location"]' +  "\n" + 'Zone: @ViewData["Zone"]' +  "\n" + 'Date du rapport: @ViewData["Date"]', // dummy text to reserve space for dynamic subtitle
                        
                    },
                    series: [{
                        name: 'Temperature',
                        data: data,
                        tooltip: {
                            valueDecimals: 1,
                            valueSuffix: '°C'
                        }
                    }]

                });
            });
        });
		</script>

@section graph{}