@model Thermo.Models.Equipement

@{
    ViewBag.Title = "Delete";
}

<div class="alert alert-dismissable alert-danger">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <h3>@Ressources.Resources.Delete !</h3>

    <p>@Ressources.Resources.deleteequipment</p>
    <br>
    <p><a data-toggle="modal" class="btn btn-danger" href="#myModal">@Ressources.Resources.moreinfo</a></p>

</div>
<fieldset>
    <legend>@Ressources.Resources.Equipement</legend>
        <div class="col-md-9">
            <div class="panel panel-primary">
            <div class="panel-body">
                <div class="table-flipscroll">
                    <table class="table">
                        <thead>
                            <th>@Ressources.Resources.Name</th>
                            <th>Zone</th>
                            <th>@Ressources.Resources.Datecreation</th>
                            <th>@Ressources.Resources.Sensors</th>
                            <th>@Ressources.Resources.SondeId</th>
                            <th>@Ressources.Resources.HighAlarm</th>
                            <th>@Ressources.Resources.LowAlarm</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.DisplayFor(model => model.Name)</td>
                                <td>@Html.DisplayFor(model => model.Zones.Name)</td>
                                <td>@Html.DisplayFor(model => model.DateCreation)</td>
                                <td>@Html.DisplayFor(model => model.Sensors.name)</td>
                                <td>@Html.DisplayFor(model => model.Numero)</td>
                                <td>@Html.DisplayFor(model => model.HighAlarm) °C</td>
                                <td>@Html.DisplayFor(model => model.LowAlarm) °C</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
      
    </div>
    
    
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" class="btn btn-danger " value="@Ressources.Resources.Delete" /> 
        <a class="btn btn-primary" @Html.ActionLink(@Ressources.Resources.BacktoList, "Index")
    </p>
}
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">@Ressources.Resources.help</h4>
            </div>
            <div class="modal-body">
                   <p>@Ressources.Resources.wahtcan.<i> @Ressources.Resources.becareful</i>, @Ressources.Resources.actionirr.</p>
                <ol>
                       <li>@Ressources.Resources.option1.</li>
                    <li>@Ressources.Resources.option2.</li>
                    
                </ol>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Ressources.Resources.Close</button>

            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->