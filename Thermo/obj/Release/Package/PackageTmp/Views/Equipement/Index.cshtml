@model IEnumerable<Thermo.Models.Equipement>
@using Thermo.Helpers
@{
    ViewBag.Title = "Index";
}

<h2>@Ressources.Resources.problist</h2>
@if (!(TempData["Success"] == null))
{
    <div class="alert alert-dismissable alert-success">
        <strong>Well done!</strong> Element created with succsess.
								<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    </div>
}
@if (Roles.IsUserInRole("super_admin"))
{
    <p style="clear: both; text-align: right;">

        <a data-toggle="modal" href="~/@CultureHelper.GetCurrentCulture()/equipement/create" class="btn btn-primary ">@Resources.Createnew</a>
    </p>
}
<div class="">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>Equipements</h4>
                    <div class="options">

                        <a href="javascript:;" class="panel-collapse"><i class="fa fa-chevron-down"></i></a>
                    </div>
                </div>
                <div class="panel-body collapse in">
                    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered datatables" id="crudtable">
                        <thead>


                            <tr>
                                <th>@Ressources.Resources.SondeId
                                </th>
                                <th>
                                    @Ressources.Resources.Name
                                </th>
                                <th>Zones
                                </th>
                                <th>
                                    @Ressources.Resources.Datecreation
                                </th>
                                <th>Type
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Numero)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Zones.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateCreation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sensors.name)
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                             @if (Roles.IsUserInRole("super_admin"))
                                             {
                                            <a class="btn btn-primary-alt btn-sm" @Html.ActionLink(@Ressources.Resources.Edit, "Edit", new { id = item.EquipementID }) 
            <a class="btn btn-primary-alt btn-sm" @Html.ActionLink(@Ressources.Resources.Details, "Details", new { id = item.EquipementID }) 
           <a class="btn btn-primary-alt btn-sm" @Html.ActionLink(@Ressources.Resources.Delete, "Delete", new { id = item.EquipementID }) ></a>
                               }         </div>
                                    </td>
                                </tr>
                                             
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



